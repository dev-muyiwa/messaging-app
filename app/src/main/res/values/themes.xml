<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MessagingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    
    <style name="Theme.MessagingApp.Toolbar" parent="Theme.MessagingApp">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Theme.MessagingApp.Button"
        parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|normal</item>
    </style>
</resources>